{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "../.generated",
    "rootDir": "..",
    "module": "commonjs",
    "target": "es2019",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "declaration": false
  },
  "include": [
    "../lib/**/*.ts",
    "../types/**/*.ts",
    "./generate-sample-book.ts"
  ]
}
